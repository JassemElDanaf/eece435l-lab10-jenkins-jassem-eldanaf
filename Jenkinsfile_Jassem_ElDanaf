pipeline {
  agent any
  options { timestamps(); ansiColor('xterm') }

  stages {
    stage('Checkout SCM') {
      steps { checkout scm }
    }

    stage('Setup') {
      steps {
        bat label: 'Create venv + install deps', script: '''
        where py || ver >NUL
        if not exist .venv (
          py -3 -m venv .venv || python -m venv .venv
        )
        call .venv\Scripts\activate
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        '''
      }
    }

    stage('Lint') {
      steps {
        bat '''
        call .venv\Scripts\activate
        flake8 .
        '''
      }
    }

    stage('Test') {
      steps {
        bat '''
        call .venv\Scripts\activate
        pytest --junitxml=test-results\junit.xml
        '''
      }
      post {
        always {
          junit allowEmptyResults: true, testResults: 'test-results/*.xml'
        }
      }
    }

    stage('Coverage') {
      steps {
        bat '''
        call .venv\Scripts\activate
        coverage run -m pytest
        coverage report -m
        coverage xml -o coverage.xml
        '''
      }
    }

    stage('Security Scan') {
      steps {
        bat '''
        call .venv\Scripts\activate
        bandit -r . -f txt -o bandit.txt --exit-zero
        '''
      }
    }

    stage('Deploy') {
      steps {
        bat '''
        call .venv\Scripts\activate
        python app.py
        '''
      }
    }

    stage('Archive') {
      steps {
        archiveArtifacts artifacts: 'dist/**/*, coverage.xml, bandit.txt', fingerprint: true
      }
    }
  }

  post {
    always { echo "Build finished: ${currentBuild.currentResult}" }
  }
}
